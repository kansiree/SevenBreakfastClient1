<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="th.co.gosoft.storemobile.sevenbreakfastclient.FragmentHistory.historyorderDetail">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_quick_do"
                style="@style/btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Quick Order"
                android:textAllCaps="false"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_remain" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_item_do"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_history"
                android:scaleType="centerCrop"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/recyclerView" />

            <TextView
                android:id="@+id/txt_comment_do"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txt_note_do"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:text="XXXXX"
                app:layout_constraintLeft_toLeftOf="@+id/txt_note_do"
                app:layout_constraintTop_toBottomOf="@+id/txt_note_do" />

            <TextView
                android:id="@+id/txt_item_do"
                style="@style/txt_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txt_comment_do"
                android:layout_marginTop="30dp"
                android:text="ITEM(S)"
                app:layout_constraintLeft_toLeftOf="@+id/txt_note_do"
                app:layout_constraintTop_toBottomOf="@+id/txt_comment_do" />

            <TextView
                android:id="@+id/txt_note_do"
                style="@style/txt_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:text="Note"
                app:layout_constraintLeft_toLeftOf="@+id/textView10"
                app:layout_constraintTop_toBottomOf="@+id/textView10" />

            <TextView
                android:id="@+id/textView7"
                style="@style/txt_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:text="Order No."
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView8"
                style="@style/txt_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Store"
                app:layout_constraintLeft_toLeftOf="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/textView7" />

            <TextView
                android:id="@+id/textView9"
                style="@style/txt_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Date"
                app:layout_constraintLeft_toLeftOf="@+id/textView8"
                app:layout_constraintTop_toBottomOf="@+id/textView8" />

            <TextView
                android:id="@+id/textView10"
                style="@style/txt_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Status"
                app:layout_constraintLeft_toLeftOf="@+id/textView9"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <TextView
                android:id="@+id/txt_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:text="1234567890"
                app:layout_constraintBottom_toBottomOf="@+id/textView7"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView7" />

            <TextView
                android:id="@+id/txt_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXX"
                app:layout_constraintBottom_toBottomOf="@+id/textView8"
                app:layout_constraintRight_toRightOf="@+id/txt_no"
                app:layout_constraintTop_toTopOf="@+id/textView8" />

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:inputType="textMultiLine"
                app:layout_constraintBottom_toBottomOf="@+id/textView9"
                app:layout_constraintRight_toRightOf="@+id/txt_store"
                app:layout_constraintTop_toTopOf="@+id/textView9" />

            <TextView
                android:id="@+id/txt_tus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complete"
                app:layout_constraintBottom_toBottomOf="@+id/textView10"
                app:layout_constraintRight_toRightOf="@+id/txt_date"
                app:layout_constraintTop_toTopOf="@+id/textView10" />

            <TextView
                android:id="@+id/txt_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/txt_item_do"
                app:layout_constraintRight_toRightOf="@+id/txt_tus"
                app:layout_constraintTop_toTopOf="@+id/txt_item_do" />

            <TextView
                android:id="@+id/txt_remain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please show this QR code to cashier to receive your order"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView2"
                android:layout_marginLeft="0dp"
                app:layout_constraintLeft_toLeftOf="@+id/imageView2"
                android:layout_marginRight="0dp"
                app:layout_constraintRight_toRightOf="@+id/imageView2" />

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_item_do"
                android:id="@+id/recyclerView"
                />
        </android.support.constraint.ConstraintLayout>
    </ScrollView>
</FrameLayout>
