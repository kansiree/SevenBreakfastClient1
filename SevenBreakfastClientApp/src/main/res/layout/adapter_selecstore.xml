<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/card_selectStore">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageView_ss"
            android:layout_width="32dp"
            android:layout_height="32dp"
         />

    <TextView
        android:id="@+id/txt_store_ss"
        android:textStyle="normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show store"
        android:layout_toRightOf="@+id/imageView_ss"
        android:layout_margin="5dp"
      />

        <TextView
            android:id="@+id/txt_distance_ss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500m."
            android:layout_toRightOf="@id/txt_store_ss"
            />
    </RelativeLayout>
</LinearLayout>