<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ProgressBar
            android:id="@+id/progressBar4"
            style="?android:attr/progressBarStyle"
            android:layout_width="42dp"
            android:layout_height="44dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_bk"
            app:layout_constraintEnd_toEndOf="@+id/imageView_bk"
            app:layout_constraintStart_toStartOf="@+id/imageView_bk"
            app:layout_constraintTop_toTopOf="@+id/imageView_bk" />

        <ImageView
            android:id="@+id/imageView_bk"
            android:layout_width="130dp"
            android:layout_height="85dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:scaleType="centerCrop"
            android:src="@color/caldroid_transparent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txt_name_bk"
            style="@style/txt_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView_bk"
            android:layout_toEndOf="@+id/imageView_bk"
            android:text="Name"
            app:layout_constraintLeft_toRightOf="@+id/imageView_bk"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toTopOf="@+id/imageView_bk"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_notadd_bk" />

        <Button
            android:id="@+id/btn_clear_bk"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@android:drawable/presence_offline"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp" />

        <Button
            android:id="@+id/btn_notadd_bk"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/imageView_bk"
            android:layout_toEndOf="@+id/imageView_bk"
            android:text="-"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_bk"
            android:layout_marginBottom="0dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView_bk"
            android:layout_marginLeft="8dp" />

        <TextView
            android:id="@+id/txt_value_bk"
            style="@style/txt_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btn_notadd_bk"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/btn_notadd_bk"
            android:text="0"
            app:layout_constraintBottom_toBottomOf="@+id/btn_notadd_bk"
            app:layout_constraintLeft_toRightOf="@+id/btn_notadd_bk"
            app:layout_constraintTop_toTopOf="@+id/btn_notadd_bk" />

        <Button
            android:id="@+id/btn_add_bk"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignTop="@+id/btn_notadd_bk"
            android:layout_toEndOf="@+id/txt_value_bk"
            android:text="+"
            app:layout_constraintBottom_toBottomOf="@+id/btn_notadd_bk"
            android:layout_marginBottom="0dp"
            app:layout_constraintTop_toTopOf="@+id/btn_notadd_bk"
            android:layout_marginTop="0dp"
            app:layout_constraintLeft_toRightOf="@+id/txt_value_bk"
            android:layout_marginLeft="10dp"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/txt_price_bk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txt_value_bk"
            android:layout_toStartOf="@+id/btn_clear_bk"
            android:text="Price"
            style="@style/txt_price"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_clear_bk"
            android:layout_marginRight="5dp"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>